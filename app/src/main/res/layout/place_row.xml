<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/placeCard"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">-->

        <TextView
            android:id="@+id/placeNameCard"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorAccent"
            android:text="name"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/placeNameCard">

            <TextView
                android:id="@+id/unitNumberCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="25dp"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:textColor="@color/cardview_light_background"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/rentCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/unitNumberCard"
                android:layout_marginEnd="77dp"
                android:paddingTop="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/unitNumberCard"
                android:layout_marginEnd="77dp"
                android:paddingTop="20dp"
                android:text="nsjd"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/editDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/rentCard"
                android:src="@drawable/ic_edit_details" />

            <ImageButton
                android:id="@+id/deleteCommunity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/rentCard"
                android:layout_alignTop="@+id/rentCard"
                android:src="@drawable/ic_delete_community" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
